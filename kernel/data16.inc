flm             db 0
preboot_lfb     db 0
preboot_bootlog db 0
boot_drive      db 0
bx_from_load:   dw 'r1' ; boot source: a..d - hard drives, r - RAM drive; drive number is char ('1'), not a number (1)

align 4
old_ints_h:
  dw 0x400
  dd 0
  dw 0

kernel_restart_bootblock:
  db 1 ; version
  dw 1 ; floppy image is in memory
  dd 0 ; cannot save parameters

